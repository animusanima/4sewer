<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="16dp"
            app:srcCompat="@drawable/cat_baby_overall" />

        <TextView
            android:id="@+id/titel_view"
            android:layout_toRightOf="@id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mamasliebchen"
            android:textAppearance="?android:textAppearanceMedium"/>

        <TextView
            android:id="@+id/hersteller_view"
            android:layout_toRightOf="@id/imageView"
            android:layout_below="@+id/titel_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shapelines"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/kategorie_view"
            android:layout_below="@id/titel_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baumwolle"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textAppearance="?android:textAppearanceMedium"/>

        <TextView
            android:id="@+id/anzahl_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kategorie_view"
            android:text="3x"
            android:layout_alignParentRight="true"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_marginTop="8dp"/>/>

    </RelativeLayout>

</android.support.v7.widget.CardView>