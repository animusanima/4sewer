<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/titel_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mamasliebchen"
            android:textAppearance="?android:textAppearanceMedium"/>

        <TextView
            android:id="@+id/hersteller_view"
            android:layout_below="@+id/titel_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shapelines"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/kategorie_view"
            android:layout_below="@id/titel_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baumwolle"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textAppearance="?android:textAppearanceMedium"/>

        <TextView
            android:id="@+id/anzahl_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kategorie_view"
            android:text="3x"
            android:layout_alignParentRight="true"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <CheckBox
            android:id="@+id/panel_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/anzahl_view"
            android:layout_marginRight="-8dp"/>

        <TextView
            android:id="@+id/panel_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/anzahl_view"
            android:layout_toLeftOf="@id/panel_view"
            android:text="Panel"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_marginTop="6dp"/>

        <CheckBox
            android:id="@+id/muster_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/panel_view"
            android:layout_marginRight="-8dp" />

        <TextView
            android:id="@+id/muster_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/panel_view"
            android:layout_toLeftOf="@id/muster_view"
            android:text="Muster"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_marginTop="6dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>